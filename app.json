{
  "expo": {
    "name": "SpotCheck",
    "slug": "spotcheck-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spotcheck.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SpotCheck needs camera access to scan your bills and contracts for analysis.",
        "NSPhotoLibraryUsageDescription": "SpotCheck needs access to photos to analyze saved documents.",
        "NSCalendarsUsageDescription": "SpotCheck adds renewal reminders to your calendar so you never miss a date."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.spotcheck.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "SpotCheck needs camera access to scan your bills and contracts for analysis."
        }
      ],
      "react-native-mlkit-ocr",
      "expo-local-authentication",
      "expo-apple-authentication"
    ],
    "scheme": "spotcheck"
  }
}
